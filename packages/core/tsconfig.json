{
  "compilerOptions": {
    "jsx": "react",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "target": "es5",
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "lib": [
      "es2015.promise",
      "es2015.iterable",
      "es5",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
